sub hex_insertrecord(a$,b$)

code=dec(left$(right$(a$,3),2))

h1$=lower$(hex$(code))
if (len(h1$)<2) h1$="0"+h1$

h11$=mid$(h1$,1,1)
h12$=mid$(h1$,2,1)

if (h11$<>upper$(h11$)) h11$="["+h11$+upper$(h11$)+"]"
if (h12$<>upper$(h12$)) h12$="["+h12$+upper$(h12$)+"]"

insertrecord("(@@@@'"+h11$+h12$+")",b$) 

if (chr$(code)<>b$) insertrecord("(@"+oct$(code)+")",b$)
end sub

