sub o(n1,n2)

print "code: "+str$(n1)

h1$=lower$(hex$(n1))
if (len(h1$)<2) h1$="0"+h1$

h11$=mid$(h1$,1,1)
h12$=mid$(h1$,2,1)

if (h11$<>upper$(h11$)) h11$="["+h11$+upper$(h11$)+"]"
if (h12$<>upper$(h12$)) h12$="["+h12$+upper$(h12$)+"]"
 

insertrecord("(@@@@'"+h11$+h12$+")","@"+oct$(n2))

end sub

